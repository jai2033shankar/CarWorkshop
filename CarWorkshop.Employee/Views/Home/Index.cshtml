@model CarWorkshop.Employee.Models.LogInViewModel
@{
    ViewData["Title"] = "CarWorkshop";
}

@if (!Context.User.Identity.IsAuthenticated)
{
<div class="jumbotron text-center">
    <h1>Hello</h1>
    <p>Please Log In</p>
</div>

<div>
    <form method="post" asp-controller="Home" asp-action="LogIn">

        <div class="form-group">
            <label asp-for="EmailAddress">Email</label>
            <input class="form-control" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Sign In" />
        </div>

    </form>
</div>
}