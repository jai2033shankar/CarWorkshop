@model CarWorkshop.Infrastructure.DTO.ClientDTO

<form method="post" asp-controller="Account" asp-action="Profile">
   
    <div>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    
    <div>
        <label asp-for="IdentityCardNumber">ID number</label>
        <input asp-for="IdentityCardNumber" />
        <span asp-validation-for="IdentityCardNumber"></span>
    </div>

    <div>
        <label asp-for="Pesel">Pesel</label>
        <input asp-for="Pesel" />
        <span asp-validation-for="Pesel"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
        <label asp-for="EmailAddress">Email Address</label>
        <input asp-for="EmailAddress" />
        <span asp-validation-for="EmailAddress"></span>
    </div>

    <div>
        @Html.HiddenFor(m => m.ClientId)
    </div>

    <div>
        <input type="submit" value="Update" />
    </div>
</form>