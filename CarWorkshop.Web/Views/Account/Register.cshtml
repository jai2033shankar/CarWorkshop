@model CarWorkshop.Web.Models.RegisterViewModel
@{
        ViewData["Title"] = "Register";
}

<h1>Hello, Please provide needed information!</h1>

<form method="post" asp-controller="Account" asp-action="Register">
    <div>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" />
        <span asp-validation-for = "FirstName"></span>
    </div>

    <div>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div>
        <label asp-for="IdentityCardNumber">IdentityCard Number</label>
        <input asp-for="IdentityCardNumber" />
        <span asp-validation-for="IdentityCardNumber"></span>
    </div>

    <div>
        <label asp-for="PESEL">PESEL</label>
        <input asp-for="PESEL" />
        <span asp-validation-for="PESEL"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
        <label asp-for="EmailAddress">Email Address</label>
        <input asp-for="EmailAddress" />
        <span asp-validation-for="EmailAddress"></span>
    </div>

    <div>
        <input type="submit" value="Register"/>
    </div>

</form>