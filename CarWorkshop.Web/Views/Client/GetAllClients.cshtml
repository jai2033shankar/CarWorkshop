@model List<CarWorkshop.Infrastructure.DTO.ClientDTO>
@{
    ViewData["Title"] = "Test Client Page";
}

<div class="container">
    <h1>Clients</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Car</th>
                <th>Reg No.</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var client in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(item => client.FirstName)</td>
                    <td>@Html.DisplayFor(item => client.LastName)</td>
                    <td>@Html.DisplayFor(item => client.EmailAddress)</td>
                    <td>@Html.DisplayFor(item => client.PhoneNumber)</td>
                    <td>@Html.DisplayFor(item => client.Cars.SingleOrDefault().Model)</td>
                    <td>@Html.DisplayFor(item => client.Cars.SingleOrDefault().RegistratrionNumber)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

