@model List<CarWorkshop.Infrastructure.DTO.EmployeeDTO>
@{
    ViewData["Title"] = "Test Employee Page";
}

<div class="container">
    <h1>Employees</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Currency</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(item => employee.FirstName)</td>
                    <td>@Html.DisplayFor(item => employee.LastName)</td>
                    <td>@Html.DisplayFor(item => employee.EmailAddress)</td>
                    <td>@Html.DisplayFor(item => employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(item => employee.Position)</td>
                    <td>@Html.DisplayFor(item => employee.Salary.Salary)</td>
                    <td>@Html.DisplayFor(item => employee.Salary.Currency)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

